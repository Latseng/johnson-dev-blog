---
import PostComments from "@components/PostComments.astro";
import BaseLayout from "./BaseLayout.astro";
import { CldImage } from "astro-cloudinary";

import TableOfContents from "@components/TableOfContents.astro";

const { frontmatter, readingTime, headings } = Astro.props;
const slug = Astro.params.slug;

if (!slug) {
  return Astro.redirect("/404");
}
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="prose sm:prose-lg dark:prose-invert mt-24 mx-auto p-4">
    <h1>{frontmatter.title}</h1>
    <p><em>{frontmatter.description}</em></p>
    <div class="flex items-center gap-2 text-sm">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-5"
      >
        <path
          d="M12.75 12.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM7.5 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM8.25 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM9.75 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM10.5 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM12.75 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM14.25 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM15 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM16.5 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM15 12.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM16.5 13.5a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z"
        ></path>
        <path
          fill-rule="evenodd"
          d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z"
          clip-rule="evenodd"></path>
      </svg>
      <span class="text-gray-400">
        {frontmatter.pubDate.toLocaleDateString()}
      </span>
      <span class="mx-2">|</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"
        ></path>
      </svg>
      <span>
        <a href="/about" class="no-underline hover:underline"
          >{frontmatter.author}</a
        >
      </span>
      <span class="mx-1">|</span>
      <span>閱讀時間：{readingTime}</span>
    </div>
    <CldImage
      src={frontmatter.image.url}
      alt={frontmatter.image.alt}
      width={800}
      height={450}
      crop={{
        type: "fit",
        source: true,
      }}
      format="auto"
      quality="auto"
    />
    <div class="flex">
      {
        frontmatter.tags.map((tag: string) => (
          <p class="flex items-center p-2 text-sm bg-slate-50 border border-gray-300 rounded-md mx-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-4 mr-2 text-sky-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 6h.008v.008H6V6Z"
              />
            </svg>
            <a class="text-sky-600" href={`/tags/${tag}`}>
              {tag}
            </a>
          </p>
        ))
      }
    </div>
    <div
      class="border px-4 md:mx-12 md:px-8 text-sm md:text-lg bg-slate-100 dark:bg-slate-500"
    >
      <p class="text-center font-semibold">文章目錄</p>
      <nav>
        <ul class="space-y-4">
          {
            headings.map((item: { slug: string; text: string }) => (
              <li>
                <a href={`#${item.slug}`}>{item.text}</a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <TableOfContents headings={headings} />
    <div>
      <slot />
    </div>
    <PostComments />
  </article>
</BaseLayout>

<script>
  const target = document.getElementById("dynamic-toc");

  if (target) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 1000) {
        target.classList.remove("hidden");

      } else {

        target.classList.add("hidden")
      }
    });
  }
</script>
