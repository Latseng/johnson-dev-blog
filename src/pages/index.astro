---
import BaseLayout from "../layouts/BaseLayout.astro"
import PostsCollection from "../components/PostsCollection.astro";
const pageTitle = "首頁";
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class="flex justify-center  text-2xl md:text-5xl text-gray-800">
    <span class="animate-fadeIn p-2 bg-slate-300 dark:text-slate-100 dark:bg-slate-500 rounded-lg">前端</span>
    <span class="mx-4 animate-fadeIn delay-2000 p-2 dark:text-slate-100 dark:bg-slate-500 bg-slate-300 rounded-lg">網頁開發</span>
    <span class="animate-fadeIn delay-3000 p-2 dark:text-slate-100 dark:bg-slate-500 bg-slate-300 rounded-lg">技術鑽研雜感</span>
  </h1>
  <h2 class="text-center text-4xl mt-10">最新文章</h2>
  <PostsCollection />
</BaseLayout>